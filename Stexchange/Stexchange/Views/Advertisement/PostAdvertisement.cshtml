@{
    ViewData["Title"] = "Post Advertisement";
}
<link rel="stylesheet" href="~/css/postadvertisement.css" />

<h2>Advertentie plaatsen</h2>
<h3>Vul de volgende gegevens in om een advertentie te plaatsen.</h3>
<h3><strong>Aangeboden planten mogen geen pesticiden bevatten!</strong></h3><br>
<form action="PostAdvertisement" method="post" class="advertisementform">
    <p>
        <span id="messagepicture">Klik op "Bestand selecteren" om foto's toe te voegen</span>
        <img id="imgoutput" />
        <div class="imageslides">
            <a class="previous" onclick="previousImg(1)">&#10094;</a>
            <span id="imagecounter"></span>
            <a class="next" onclick="nextImg(1)">&#10095;</a>
        </div>
    </p>
    <p>
        <input type="file" id="imginput" name="img" onchange="loadFile(event)" accept="image/*" multiple required>
    </p>
    <p>
        <label for="title" class="labeltext">Titel</label>
        <input class="labelinput" name="title" type="text" maxlength="80" required />
    </p>
    <p>
        <label for="description" class="labeltext">Beschrijving</label>
        <textarea class="descriptionInput" name="description" maxlength="500" required></textarea>
    </p>
    <p>
        <label for="name_lt" class="labeltext">Latijnse naam</label>
        <input class="labelinput" name="name_lt" type="text" maxlength="50" />
    </p>
    <p>
        <label for="name_nl" class="labeltext">Nederlandse naam</label>
        <input class="labelinput" name="name_nl" type="text" maxlength="50" required />
    </p>
    <p>
        <label for="quantity" class="labeltext">Aantal</label>
        <input class="labelinput" name="quantity" type="number" min="1" required />
    </p>
    <p>
        <label for="light">Hoeveel licht heeft de plant nodig</label>
        <select name="light" id="light" >
            <option value="zonlicht">Zonlicht</option>
            <option value="halfschaduw">Halfschaduw</option>
            <option value="schaduw">Schaduw</option>
        </select>
    </p>
    <p>
        <label for="water">Hoeveel vocht heeft de plant nodig</label>          
        <select name="water" id="water" >
            <option value="wisselnat">Wisselnat</option>
            <option value="vochtig">Vochtig</option>
            <option value="matig_vochtig">Matig vochtig</option>
            <option value="droog">Droog</option>
        </select>
    </p>
    <div class="accordion">Extra filters</div>
    <div id="extrafilters">
        <p>
            <label for="plant_type">Wat voor soort plant is het?</label>
            <select name="plant_type" id="plant_type" required>
                <option value="plant">Plant</option>
                <option value="zaad">Zaad</option>
                <option value="stek">Stek</option>
            </select>
        </p>
        <p>
            <label for="nutrients">Hoeveel voeding heeft de plant nodig</label>
            <select name="nutrients" id="nutrients">
                <option value="null">Geen idee</option>
                <option value="veel">Veel</option>
                <option value="gemiddeld">Gemiddeld</option>
                <option value="weinig">Weinig</option>
            </select>
        </p>
        <p>
            <label for="ph">Wat is de pH-waarde van de plant</label>
            <select name="ph" id="ph">
                <option value="null">Geen idee</option>
                <option value="zuur">Zuur</option>
                <option value="neutraal">Neutraal</option>
                <option value="kalkrijk">Kalkrijk</option>
            </select>
        </p>
        <p>
            <label for="indigenous">De plant is inheems</label>
            <select name="indigenous" id="indigenous">
                <option value="null">Geen idee</option>
                <option value="inheems">Inheems</option>
                <option value="niet_inheems">Niet inheems</option>
            </select>
        </p>
        <p>
            <label for="with_pot">De plant is voorzien van een pot</label>
            <select name="with_pot" id="with_pot" required>
                <option value="ja">Ja</option>
                <option value="nee">Nee</option>
            </select>
        </p>
        <p>
            <label for="give_away">De plant is gratis weg te geven</label>
            <select name="give_away" id="give_away" value="nee" required>
                <option value="ja">Ja</option>
                <option value="nee">Nee</option>
            </select>
        </p>
    </div>
    <p>
        <button type="submit" class="submit advertisement" id="advertisementsubmit">Advertentie plaatsen</button>
    </p>
</form>

<script type="text/javascript" src="~/js/postadvertisement.js" asp-append-version="true"></script>



