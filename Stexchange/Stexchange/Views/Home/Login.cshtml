    <form action="#" method="post" class="accountform">
        <h2 class="logintitle">Hey!</br>Welcome back.</h2>
        <p>
            <label for="Email" class="labeltext">Email</label>
            <input class="labelinput" name="Email" type="text">
        </p>
        <p>
            <label for="password" class="labeltext">Password</label>
            <input class="labelinput" name="password" type="password">
            <span class="labelinfo">Enter a password longer than 8 characters</span>
        </p>
        <a href="www.link.here"><span class="forgetpasslink">Forgot your password?</span></a>
        <p>
            <input type="submit" value="Login" class="submit">
        </p>
    </form>

    <form action="#" method="post" class="accountform">
        <h2 class="logintitle">Not a member?</br>Join us!</h2>
        <p>
            <label for="Email" class="labeltext">Email</label>
            <input class="labelinput" name="Email" type="text" value="Fill in your email">
        </p>
        <p>
            <label for="Email" class="labeltext">Verify Email</label>
            <input class="labelinput" name="Email" type="text">
        </p>
        <p>
            <label for="password" class="labeltext">Password</label>
            <input class="labelinput" name="password" type="password" value="">
            <span class="labelinfo">Enter a password longer than 8 characters</span>
        </p>
        <p>
            <label for="confirm_password" class="labeltext">Confirm Password</label>
            <input class="labelinput" name="confirm_password" type="password">
            <span class="labelinfo">Your passwords do not match</span>
        </p>
        <p class="termstext">By creating an account, you agree to the <a class="termlink" href="www.link.here">Terms of Use</a> and <a class="termlink" href="www.link.here">Privacy Policy</a>

        <p>
            <input type="submit" value="Create My Account" class="submit">
        </p>
    </form>
</body>

